<div class="container">
  <ul>
    <% @restaurants.each do |r| %>
     <li>
      <%= r.name %>
      <%= r.address %>
      <%= r.phone_number %>
      <%= r.category %>
    </li>
    <li><%= link_to "Details", restaurant_path(r) %></li>
    <% end %>
    <li><%= link_to "Add restaurant", new_restaurant_path %></li>
  </ul>
</div>


